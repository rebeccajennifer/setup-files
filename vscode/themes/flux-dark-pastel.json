{
  "$schema"     : "vscode://schemas/color-theme"
, "name"        : "Flux Dark Pastel"
, "type"        : "dark"

, "colors":
  { "editor.background"                 : "#1c1c1c"
  , "editor.foreground"                 : "#d7d7d7"
  , "editorBracketHighlight.foreground1": "#d787af"
  , "editorBracketHighlight.foreground2": "#00afd7"
  , "editorBracketHighlight.foreground3": "#ffd787"
  }

, "tokenColors":
  [ {}

  , { "scope": "comment"
    , "settings": { "foreground": "#878787" }
    }

  , { "scope": "invalid"
    , "settings": { "foreground": "#ff5f87" }
    }

  , { "scope": "string"
    , "settings": { "foreground": "#5fafaf" }
    }

  , { "scope": "constant.character.escape"        // \n in "\n"
    , "settings": { "foreground": "#ffaf87" }
    }

  , { "scope": "entity.name.label"
    , "settings": { "foreground": "#C8C8C8" }
    }

  , { "scope": "keyword.control.directive"
    , "settings": { "foreground": "#eeeeee" }
    }

  , { "scope": ""
    , "settings": { "foreground": "#ff00af" }
    }


  , { "name"  : "Source code"
    , "scope" : [ ""
      , "source"
      , ""
      ]
    , "settings": { "foreground": "#afafaf"}
    }

  , { "name"  : "Scope Resolution"
    , "scope": [ ""
      , "entity.name.scope-resolution.cpp"
      , "entity.name.scope-resolution.function.definition.cpp"
      ], "settings": { "foreground": "#af87d7" }
    }

  , { "name"  : "Class and struct types"
    , "scope" : [ ""
      , "storage.type.class"
      , "storage.type.struct"
      , "storage.type.enum.cpp"
      , "storage.type.enum.enum-key.class.cpp"
      , ""
      ]
    , "settings": { "foreground": "#00afd7"}
    }

  , { "name"  : "Types"
    , "scope" : [ ""
      , "support.type"
      , "storage.type"
      , ""
      ]
    , "settings": { "foreground": "#87d7af"}
    }

  , { "name"  : "Strings Other"
    , "scope" : [ ""
      , "support.type.property-name.json"
      , ""
      ]
    , "settings": { "foreground": "#af87af"}
    }

  , { "name"  : "Member variables"
    , "scope" : [ ""
      , "meta.member.access.python"
      , ""
      ]
    , "settings": { "foreground": "#87afd7"}
    }

  , { "name"  : "Language Constants and Modifiers"
    , "scope" : [ ""
      , "constant.language"
      , "keyword"
      , "keyword.operator.cast"   // static_cast, reinterpret_cast
      , "storage.modifier"        // const, static
      , "storage.type.modifier"   // public
      , ""
      ]
    , "settings": { "foreground": "#ffd787"}
    }

  , { "name"  : ""
    , "scope" : [ ""
      , "storage.type.function"   // def in python
      , ""
      ]
    , "settings": { "foreground": "#af87d7"}
    }

  , { "name"  : "Numbers"
    , "scope" : [ ""
      , "constant.numeric"
      , ""
      ]
    , "settings": { "foreground": "#afd787"}
    }

  , { "name"  : "Operators"
    , "scope" : [ ""
      , "keyword.operator"
      , ""
      ]
    , "settings": { "foreground": "#ffaf87"}
    }

    //--------------------------------------------------------
  , { "name"  : "Function declarations"
    , "scope" : [ ""
      , "entity.name.function"
      , "support.function"
      , "support.constant.handlebars"
      , "entity.name.operator.custom-literal"
      ]
    , "settings": { "foreground": "#afd787" }
    }

  , { "name"  : "Types declaration and references"
    , "scope" : [ ""
      , "entity.name.type"
      , "entity.name.namespace"
      //, "entity.other.attribute"
      //, "entity.name.class"
      ]
    , "settings": { "foreground": "#af87d7" }
    }

  , { "name"  : "Types declaration and references, TS grammar specific"
    , "scope" : [ ""
      , "meta.type.cast.expr"
      , "meta.type.new.expr"
      , "support.constant.math"
      , "support.constant.dom"
      , "support.constant.json"
      , "entity.other.inherited-class"
      , "punctuation.separator.namespace.ruby"
      ]
    , "settings": { "foreground": "#4EC9B0" }
    }

  , { "name"  : "Control flow / Special keywords"
    , "scope" : [ ""
      , "keyword.control" // switch, case, break, if, else, default
      , "source.cpp keyword.operator.new"
      , "keyword.operator.delete"
      , "keyword.other.using"
      , "keyword.other.directive.using"
      , "keyword.other.operator"
      , "entity.name.operator"
      ]
    , "settings": { "foreground": "#d787af" }
    }

  , { "name"  : "Variable and parameter name"
    , "scope" : [ ""
      , "variable"
      , "meta.definition.variable.name"
      , "support.variable"
      , "entity.name.variable"
      , "constant.other.placeholder"
      ]
    , "settings": { "foreground": "#5f87d7" }
    }

  , { "name"  : "Constants and enums"
    , "scope" : [ ""
      , "variable.other.constant"
      , "variable.other.enummember"
      ]
    , "settings": { "foreground": "#af87d7" }
    }

  , { "name"  : "Object keys, TS grammar specific"
    , "scope" : [ ""
      , "meta.object-literal.key"
      ]
    , "settings": { "foreground": "#9CDCFE" }
    }

  , { "name"  : "CSS property value"
    , "scope" : [ ""
      , "support.constant.property-value"
      , "support.constant.font-name"
      , "support.constant.media-type"
      , "support.constant.media"
      , "constant.other.color.rgb-value"
      , "constant.other.rgb-value"
      , "support.constant.color"
      ]
    , "settings": { "foreground": "#d75fd7" }
    }

  , { "name"  : "Regular expression groups"
    , "scope" : [ ""
      , "punctuation.definition.group.regexp"
      , "punctuation.definition.group.assertion.regexp"
      , "punctuation.definition.character-class.regexp"
      , "punctuation.character.set.begin.regexp"
      , "punctuation.character.set.end.regexp"
      , "keyword.operator.negation.regexp"
      , "support.other.parenthesis.regexp"
      ]
    , "settings": { "foreground": "#d75fd7" }
    }

  , { "scope": [
        "constant.character.character-class.regexp"
      , "constant.other.character-class.set.regexp"
      , "constant.other.character-class.regexp"
      , "constant.character.set.regexp"
      ]
    , "settings": { "foreground": "#d787af" }
    }

  , { "scope": [
        "keyword.operator.or.regexp"
      , "keyword.control.anchor.regexp"
      ]
    , "settings": { "foreground": "#DCDCAA" }
    }

  , { "scope": "keyword.operator.quantifier.regexp"
    , "settings": { "foreground": "#d7ba7d" }
    }

  , { "scope": [
        "constant.character"
      , "constant.other.option"
      ]
    , "settings": { "foreground": "#569cd6" }
    }

  ]

  // These properties override tokenColors
, "semanticTokenColors":
  { "variable"      : "#87afd7"
  , "property"      : "#5f87d7" // Class member variables
  , "parameter"     : "#87afd7" // Class member variables
  , "enumMember"    : "#5f87d7" // Class member variables
  //, "type"          : "#87d7d7" // Overrides
  }


}

